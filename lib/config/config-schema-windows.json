{
  "general": {
    "order": 10,
    "title": "General",
    "type": "object",
    "properties":
    {
      "python": {
        "order": 0,
        "title": "Python",
        "description": "Select your python path",
        "type": "string",
        "default": "python",
        "enum": ["python", "python3"]
      },
      "hdl-language": {
        "order": 1,
        "title": "HDL language",
        "description": "Select language support for the IDE.",
        "type": "string",
        "default": "vhdl",
        "enum": ["vhdl"]
      },
      "simulator": {
        "order": 2,
        "title": "Simulator",
        "description": "Select an installed simulator in your system.",
        "type": "string",
        "default": "ghdl",
        "enum": ["ghdl","modelsim","xsim"]
      },
      "gtkwave-path": {
        "order": 3,
        "title": "GTKWave folder path",
        "description": "Path to GTKWave path.",
        "type": "string",
        "default": "C:\\gtkwave_folder"
      },
      "type-analyzer": {
        "order": 4,
        "title": "Experimental! Type analyzer",
        "description": "Activate ctags.",
        "type": "boolean",
        "default": false
      }
    }
  },

  "xsim": {
    "order": 20,
    "title": "xsim",
    "type": "object",
    "properties":
    {
      "xsim-path": {
        "order": 1,
        "title": "XSIM path",
        "description": "XSIM simulator path.",
        "type": "string",
        "default": "C:\\Xilinx\\2018.2\\bin"
      }
    }
  },

  "ghdl": {
    "order": 30,
    "title": "ghdl",
    "type": "object",
    "properties":
    {
      "ghdl-path": {
        "order": 1,
