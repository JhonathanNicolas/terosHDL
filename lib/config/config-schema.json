{
  "general": {
    "title": "General",
    "type": "object",
    "properties":
    {
      "server-ip": {
        "order": 1,
        "title": "Server IP",
        "description": "Server IP",
        "type": "string",
        "default": "localhost"
      },
      "server-port": {
        "order": 1,
        "title": "Server port",
        "description": "Server port",
        "type": "string",
        "default": "8000"
      },
      "gtkwave-path": {
        "order": 3,
        "title": "GTKWave folder path",
        "description": "Path to GTKWave path.",
        "type": "string",
        "default": "/usr/local/bin"
      },
      "type-analyzer": {
        "order": 4,
        "title": "Experimental! Type analyzer",
        "description": "Activate ctags.",
        "type": "boolean",
        "default": false
      }
    }
  },
  "simulator-paths": {
    "title": "Simulators paths",
    "type": "object",
    "properties":
    {
      "ghdl-path": {
        "order": 1,
        "title": "GHDL path",
        "description": "GHDL simulator path.",
        "type": "string",
        "default": "/usr/local/bin"
      },
      "modelsim-path": {
        "order": 2,
        "title": "ModelSim path",
        "description": "ModelSim simulator path.",
        "type": "string",
        "default": "/usr/local/bin"
      },
      "vivado-path": {
        "order": 3,
        "title": "Vivado path",
        "description": "Vivado simulator path.",
        "type": "string",
        "default": "/usr/local/bin"
      },
      "verilator-path": {
        "order": 4,
        "title": "Verilator path",
        "description": "Verilator simulator path.",
        "type": "string",
        "default": "/usr/local/bin"
      },
      "icarus-path": {
        "order": 5,
        "title": "Icarus path",
        "description": "Icarus simulator path.",
        "type": "string",
        "default": "/usr/bin"
      }
    }
  },
  "linters": {
    "title": "Linters configuration",
    "type": "object",
    "properties":
    {
      "on-change": {
        "order": 0,
        "title": "On change",
        "type": "boolean",
        "default": "false"
      },
      "verilog-linter": {
        "order": 1,
        "title": "Verilog linter",
        "description": "Verilog linter backend.",
        "type": "string",
        "default": "icarus",
        "enum": ["icarus","modelsim","verilator","vivado"]
      },
      "vhdl-linter": {
        "order": 2,
        "title": "VHDL linter",
        "description": "VHDL linter backend.",
        "type": "string",
        "default": "ghdl",
        "enum": ["ghdl","modelsim","vivado"]
      }
    }
  },
  "beautifuler": {
    "title": "VHDL formatter and beautifuler",
    "type": "object",
    "properties":
    {
      "on-save": {
        "order": 0,
        "title": "On save",
        "type": "boolean",
        "default": "false"
      },
      "keyword-case": {
        "order": 1,
        "title": "Keyword case",
        "type": "string",
        "default": "LowerCase",
        "enum": ["LowerCase","UpperCase"]
      },
      "type-name-case": {
        "order": 2,
        "title": "Type name case",
        "type": "string",
        "default": "LowerCase",
        "enum": ["LowerCase","UpperCase"]
      },
      "remove-comments": {
        "order": 3,
        "title": "Remove comments",
        "type": "boolean",
        "default": "false"
      },
      "remove-asserts": {
        "order": 4,
        "title": "Remove asserts",
        "type": "boolean",
        "default": "false"
      },
      "indentation": {
        "order": 5,
        "title": "Indentation",
        "type": "string",
        "default": "  "
      },
      "mode": {
        "order": 7,
        "title": "Align mode",
        "type": "string",
        "default": "local",
        "enum": ["local","global"]
      },
      "align-port": {
        "order": 8,
        "title": "Align signs in port",
        "type": "boolean",
        "default": "true"
      },
      "align-generic": {
        "order": 9,
        "title": "Align signs in generic",
        "type": "boolean",
        "default": "true",
        "enum": ["true","false"]
      },
      "align-procedure": {
        "order": 10,
        "title": "Align signs in procedure",
        "type": "boolean",
        "default": "true"
      },
      "align-function": {
        "order": 11,
        "title": "Align signs in function",
        "type": "boolean",
        "default": "true"
      }
    }
  }
}
