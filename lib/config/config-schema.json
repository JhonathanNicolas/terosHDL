{
  "general": {
    "title": "General",
    "type": "object",
    "properties":
    {
      "server-ip": {
        "order": 1,
        "title": "Server IP",
        "description": "Server IP",
        "type": "string",
        "default": "localhost"
      },
      "server-port": {
        "order": 1,
        "title": "Server port",
        "description": "Server port",
        "type": "string",
        "default": "8000"
      },
      "hdl-language": {
        "order": 1,
        "title": "HDL language",
        "description": "Select language support for the IDE.",
        "type": "string",
        "default": "vhdl",
        "enum": ["vhdl"]
      },
      "simulator": {
        "order": 2,
        "title": "Simulator",
        "description": "Select an installed simulator in your system.",
        "type": "string",
        "default": "ghdl",
        "enum": ["ghdl","modelsim"]
      },
      "gtkwave-path": {
        "order": 3,
        "title": "GTKWave folder path",
        "description": "Path to GTKWave path.",
        "type": "string",
        "default": "/usr/local/bin"
      },
      "type-analyzer": {
        "order": 4,
        "title": "Experimental! Type analyzer",
        "description": "Activate ctags.",
        "type": "boolean",
        "default": false
      }
    }
  },
  "linters": {
    "title": "Linters configuration",
    "type": "object",
    "properties":
    {
      "vhdl-linter": {
        "order": 30,
        "title": "VHDL linter",
        "description": "VHDL linter backend.",
        "type": "string",
        "default": "ghdl",
        "enum": ["ghdl","modelsim"]
      },
      "verilog-linter": {
        "order": 40,
        "title": "Verilog linter",
        "description": "Verilog linter backend.",
        "type": "string",
        "default": "ghdl",
        "enum": ["icarus","modelsim","verilator"]
      }
    }
  },
  "beautifuler": {
    "title": "VHDL formatter and beautifuler",
    "type": "object",
    "properties":
    {
      "on-save": {
        "order": 0,
        "title": "On save",
        "type": "boolean",
        "default": "false"
      },
      "keyword-case": {
        "order": 1,
        "title": "Keyword case",
        "type": "string",
        "default": "LowerCase",
        "enum": ["LowerCase","UpperCase"]
      },
      "type-name-case": {
        "order": 2,
        "title": "Type name case",
        "type": "string",
        "default": "LowerCase",
        "enum": ["LowerCase","UpperCase"]
      },
      "remove-comments": {
        "order": 3,
        "title": "Remove comments",
        "type": "boolean",
        "default": "false"
      },
      "remove-asserts": {
        "order": 4,
        "title": "Remove asserts",
        "type": "boolean",
        "default": "false"
      },
      "indentation": {
        "order": 5,
        "title": "Indentation",
        "type": "string",
        "default": "  "
      },
      "mode": {
        "order": 7,
        "title": "Align mode",
        "type": "string",
        "default": "local",
        "enum": ["local","global"]
      },
      "align-port": {
        "order": 8,
        "title": "Align signs in port",
        "type": "boolean",
        "default": "true"
      },
      "align-generic": {
        "order": 9,
        "title": "Align signs in generic",
        "type": "boolean",
        "default": "true",
        "enum": ["true","false"]
      },
      "align-procedure": {
        "order": 10,
        "title": "Align signs in procedure",
        "type": "boolean",
        "default": "true"
      },
      "align-function": {
        "order": 11,
        "title": "Align signs in function",
        "type": "boolean",
        "default": "true"
      }
    }
  },
  "ghdl": {
    "title": "ghdl",
    "type": "object",
    "properties":
    {
      "ghdl-path": {
        "order": 1,
        "title": "GHDL path",
        "description": "GHDL simulator path.",
        "type": "string",
        "default": "/usr/local/bin"
      },
      "sim-coverage-report-folder": {
        "title": "Coverage report folder",
        "description": "Select the folder to save the code coverage report. Relative to run.py file.",
        "type": "string",
        "default": "html"
      },
      "psl-support": {
        "order": 2,
        "title": "PSL support",
        "description": "Enable PLS analisys.",
        "type": "boolean",
        "default": false
      }
    }
  },
  "modelsim": {
    "title": "Modelsim",
    "type": "object",
    "properties":
    {
      "modelsim-path": {
        "order": 1,
        "title": "Modelsim path",
        "description": "Path to run vsim.",
        "type": "string",
        "default": "/opt/modelsim/18.0/modelsim_ase/linuxaloem"
      },
      "modelsim-ini": {
        "order": 2,
        "title": "Modelsim ini",
        "description": "Path to the modelsim.ini file.",
        "type": "string",
        "default": "/opt/modelsim/18.0/modelsim_ase/modelsim.ini"
      }
    }
  }
}
